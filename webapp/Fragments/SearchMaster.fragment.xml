<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog class="sapUiSizeCompact">
		<customHeader>
			<Bar>
				<contentLeft></contentLeft>
				<contentMiddle>
					<Label text="{i18n>filterFragTitle}" design="Bold"/>
				</contentMiddle>
				<contentRight></contentRight>
			</Bar>
		</customHeader>
		<content>
			<f:SimpleForm minWidth="1024" layout="ResponsiveGridLayout" maxContainerCols="2" editable="true" labelSpanL="3" labelSpanM="3"
				emptySpanL="1" emptySpanM="1" columnsL="1" columnsM="1" class="sapUiSizeCompact simplFormPaddCls">
				<f:content>
					<core:Title/>
					<Label text="Return Order No." design="Bold"/>
					<Input tooltip="{/returnOrder}" value="{/returnOrder}" placeholder="{i18n>enter} {i18n>rono}" maxLength="10"
						liveChange="onLiveChangeSalesOrderFilter"></Input>
					<Label text="{i18n>customerIdFrag}" design="Bold"/>
					<Input value="{/CustomerNo}" tooltip="{/CustomerNo}" placeholder="{i18n>enter} {i18n>customerIdFrag}" maxLength="10"
						liveChange="onLiveChangeCustIdFilter"></Input>
					<!--[+] Start modification - STRY0015013 Local Ref No/Invoice Number Advance Filter-->
					<Label text="{i18n>bnameFrag}" design="Bold"/>
					<Input value="{/Bname}" tooltip="{/Bname}" placeholder="{i18n>enter} {i18n>bnameFrag}" maxLength="10" liveChange="onLiveChangeBnameFilter"></Input>
					<Label text="{i18n>refInvFrag}" design="Bold"/>
					<Input value="{/RefInvoice}" tooltip="{/RefInvoice}" placeholder="{i18n>enter} {i18n>refInvFrag}" maxLength="10" liveChange="onLiveChangeRefInvoiceFilter"></Input>
					<!--[+] End modification - STRY0015013 Local Ref No/Invoice Number Advance Filter-->
					<Label text="Sold-to-party Name" design="Bold"/>
					<Input value="{/CustomerName}" tooltip="{/CustomerName}" placeholder="{i18n>enter} {i18n>customerIdFrag} {i18n>name}"
						liveChange="onLiveChangeCustIdFilter"></Input>
					<Label text="{i18n>statusFrag}" design="Bold"/>
					<Label text="{i18n>ponumber}" design="Bold"/>
					<Input value="{/CustomerPoNumber}" tooltip="{/CustomerPoNumber}" placeholder="{i18n>enter} {i18n>ponumber}"
						liveChange="onLiveChangeCustIdFilter"></Input>
					<Label text="{i18n>statusFrag}" design="Bold"/>
					<MultiComboBox placeholder="{i18n>select} {i18n>statusFrag}" items="{FilterModel>/results}" selectedKeys="{/SelStatus}">
						<core:Item text="{FilterModel>statusDescription}" key="{FilterModel>status}"></core:Item>
					</MultiComboBox>
					<Label text="{i18n>dateRangeFrag}" design="Bold"/>
					<DateRangeSelection displayFormat="dd.MM.yyyy" dateValue="{/StartDate}" secondDateValue="{/EndDate}" change="onChangeDateRange"></DateRangeSelection>
				</f:content>
			</f:SimpleForm>
		</content>
		<buttons>
			<Button text="{i18n>btnOkFrag}" press="handleOkReadSoFilter" tooltip="{i18n>btnOkFrag}"/>
			<Button text="{i18n>clearFrag}" tooltip="{i18n>clearFrag}" press="handleReadAllSOIntial"/>
			<Button text="{i18n>cancelFrag}" press="handleCancelMasterSearch" tooltip="{i18n>cancelFrag}"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>